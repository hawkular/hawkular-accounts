<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.9"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.9
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.9.xsd">

  <changeSet author="hawkular-accounts" id="changelog-1.1">
    <createTable tableName="UserSettings">
      <column name="id" type="varchar(255)">
        <constraints primaryKey="true"/>
      </column>
      <column name="createdAt" type="timestamp"/>
      <column name="updatedAt" type="timestamp"/>
      <column name="user_id" type="varchar(255)">
        <constraints foreignKeyName="fk_usersettings_user_id" references="HawkularUser(id)"/>
      </column>
    </createTable>

    <createTable tableName="UserSettings_Properties">
      <column name="userSettings_id" type="varchar(255)">
        <constraints
            primaryKey="true"
            unique="true"
            foreignKeyName="fk_usersettings_properties_id"
            references="UserSettings(id)"/>
      </column>
      <column name="properties_KEY" type="varchar(255)"/>
      <column name="properties" type="varchar(255)"/>
    </createTable>

    <addUniqueConstraint tableName="UserSettings_Properties" columnNames="userSettings_id, properties_KEY"/>
  </changeSet>

</databaseChangeLog>